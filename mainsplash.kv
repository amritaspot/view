<instruction>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: 0.8
            Label:
                text:'Collect the saliva on assay by placing it in patient mouth below tongue'
                halign: 'left'
            Label:
                text:'Else take saliva and add on assay using the dropper provided'
                halign: 'left'
            Label:
                text:'Place the assay in tray once color has developed'
                halign: 'left'
            Label:
                text:'Click start test to get the concentration'
                halign: 'left'

        BoxLayout:
            size_hint_y:0.1
            Button:
                text: 'Start Test'
                on_press: root.camcapture()
                on_release: root.manager.current = 'resultcard'
        BoxLayout:
            size_hint_y:0.1
            Button:
                text: 'ShutDown'
                on_press: root.close()

