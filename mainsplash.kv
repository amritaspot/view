<choosemode>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: 0.1
            Label:
                text: ""
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.7
            pos_hint:{'top':0.9}
            Label:
                size_hint_y: None
                size_hint_x: 0.2
                text: ""
            Button:
                size_hint_y: None
                size_hint_x: None
                height: 150
                width: 150
                background_normal: 'choosemode_test.png'
                on_press: root.manager.current = 'sampleid'
            Button:
                size_hint_y: None
                size_hint_x: None
                height: 150
                width: 150
                background_normal: 'choosemode_view.png'
                on_press: root.manager.current = 'history'
            Label:
                size_hint_y: None
                size_hint_x: 0.2
                text: ""
        BoxLayout:
            size_hint_y: 0.3
            Label:
                text: ""
        BoxLayout:
            size_hint_y:0.1
            Button:
                text: 'ShutDown'
                on_press: root.close()

